        <switch checked="{{settings.theme === 'dark'}}" color="#2C3E50"></switch>
      </view>
    </view> -->
    
    <view class="settings-group">
      <view class="settings-item">
        <text class="settings-label">当前版本</text>
        <text class="settings-value">1.0.0</text>
      </view>
    </view>
  </view>
  
  <view class="version-info">
    <text class="version-text">治愈系拼图 v1.0.0</text>
  </view>
</view> 