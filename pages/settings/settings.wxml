<!--pages/settings/settings.wxml-->
<view class="container">
  <view class="settings-list">
    <view class="settings-group">
      <view class="settings-item" bindtap="toggleSetting" data-key="sound">
        <text class="settings-label">音效</text>
        <switch checked="{{settings.sound}}" color="#2C3E50"></switch>
      </view>
      
      <view class="settings-item" bindtap="toggleSetting" data-key="showPreview">
        <text class="settings-label">显示原图参考</text>
        <switch checked="{{settings.showPreview}}" color="#2C3E50"></switch>
      </view>
    </view>
    
